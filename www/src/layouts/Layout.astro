---
import '@blank/styles';

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The fastest UI Kit & Design System for your projects."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,100..900&display=swap');

  * {
    font-family: 'Inter', sans-serif;
  }

  html {
    @apply scroll-smooth;
  }
  main {
    @apply min-h-dvh;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-medium text-balance max-w-[25ch];
  }

  p {
    @apply font-light text-pretty max-w-[65ch];
  }
</style>

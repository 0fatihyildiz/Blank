.blank
    background: #000

&.right-group
    flex(column, center, end, flex)

    .blank__radio
        flex(row-reverse, center, center, flex)

&.left-group
    flex(column, center, start, flex)

    .blank__radio
        flex(row, center, center, flex)

    &__radio-group
        flex(column, center, start, flex)

        .blank__radio
            border-radius: 0

&.medium
    .blank__radio
        input
            height: 24px
            width: 24px
        label
            Body1(500)

&.small
    .blank__radio
        input
            height: 20px
            width: 20px
        label
            Body2(500)

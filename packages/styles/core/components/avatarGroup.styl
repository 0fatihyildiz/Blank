.blank
    &__avatar-group
        display inline-flex
        align-items center
        & > *:not(:first-child)
            margin-left -15px
            z-index auto
    &__avatar
        border 2px solid $BaseWhite
        position relative

    &__extra
            display flex
            align-items center
            justify-content center
            background-color #e0e0e0
            color #555
            font-weight bold
            border-radius 50%
            padding 0 8px
            height 32px
            width 32px
            margin-left -8px
            font-size 14px
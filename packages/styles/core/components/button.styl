.blank
  &__button
    flex(row, center, center, inline-flex)

    &.large
      Body2(500)
      spacing('gap', 8px)
      spacing('padding', 12px, 16px)
      border-radius: 12px

    &.medium
      Body2(500)
      spacing('gap', 8px)
      spacing('padding', 8px, 16px)
      border-radius: 12px

    &.small
      Caption1(500)
      spacing('gap', 4px)
      spacing('padding', 8px, 16px)
      border-radius: 8px

    &.icon
      padding 0
      border-radius: 50%

      &.large
        width 48px
        height 48px

      &.medium
        width 40px
        height 40px

      &.small
        width 32px
        height 32px

    &__text
      text-decoration: none
      color: inherit

    &.primary
      background-color $Primary900
      color $BaseWhite
      shadow-1()

      &:hover
        background-color $Primary800

      &:active
        background-color $Primary700

    &.secondary
      color $BaseBlack
      background-color $BaseWhite
      border solid 1px $AlphaBlack10
      shadow-1()

      &:hover
        background-color $Primary50

      &:active
        background-color $Primary100

    &.tertiary
      color $BaseBlack
      background-color $AlphaBlack5

      &:hover
        background-color $AlphaBlack10

      &:active
        background-color $AlphaBlack20

    &.quaternary
      color $AlphaBlack60

      &:hover
        background-color $Primary100
        color $BaseBlack

      &:active
        background-color $Primary200

    &.destructive
      color $BaseWhite
      background-color $Destructive500
      shadow-1()

      &:hover
        background-color $Destructive600

      &:active
        background-color $Destructive700

    &:focus
      z-index 1
      focus-ring()

    &:disabled
      background-color $AlphaBlack5
      color $AlphaBlack30
      cursor not-allowed
      box-shadow none
      border none

      &:hover
        background-color $AlphaBlack5

      &:active
        background-color $AlphaBlack5

    &.text
      background-color transparent
      color $AlphaBlack60
      padding 0
      border none
      box-shadow none

      &:hover
        color $Primary900
        background-color transparent

      &:active
        color $Primary900
        background: transparent

      &:disabled
        color $AlphaBlack30
        cursor not-allowed
.blank
    &.button-group
        flex(row, center, center, flex)

        .blank
            &.button
                border-radius: 0

                &:first-child
                    border-bottom-left-radius: 12px
                    border-top-left-radius: 12px

                &:last-child
                    border-bottom-right-radius: 12px
                    border-top-right-radius: 12px

                &:nth-child(2)
                    border-left: 0
                    border-right: 0
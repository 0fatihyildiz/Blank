.blank
    &__input
        spacing('gap', 8px)
        flex(column, flex-start, stretch, inline-flex)

        &__label
            Body2(500)
            color: $Primary900

        &__helper
            Caption1(400)
            color: $AlphaBlack60

        &__error-text
            Caption1(400)
            color $Destructive500


        &__base
            shadow-1()
            Body2(300)
            position relative
            color $Primary900
            background-color $BaseWhite
            border solid 1px $AlphaBlack10
            border-radius 12px

            &.medium
                height 40px

            &.large
                height 48px

            &:hover
                border-color $AlphaBlack20

            &:focus-within
                focus-ring()


            .slot
                position absolute
                top 50%
                transform translateY(-50%)

                &.tail
                    left 16px

                &.lead
                    right 16px

                .icon
                    height 20px
                    color $AlphaBlack60

            input
                spacing('padding', 0, 16px)
                form-inherit()
                width 100%
                height 100%
                border-radius 12px
                cursor text

                &.tail
                    &__medium
                        padding-left 48px
                    &__large
                        padding-left 104px

                &.lead
                    &__medium
                        padding-right 48px
                    &__large
                        padding-right 100px

                &::placeholder
                    color $AlphaBlack60

        &.error
            .blank__input__base
                border-color $Destructive200
                background-color $Destructive50

                input
                    color $Destructive500

                    &::placeholder
                        color $Destructive400

        &.disabled
            .blank__input__base
                border none
                box-shadow none
                background-color $AlphaBlack5

                input
                    color $AlphaBlack60

                    &::placeholder
                        color $AlphaBlack30

            .icon
                color $AlphaBlack30
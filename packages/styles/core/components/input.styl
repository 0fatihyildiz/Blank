.blank
    &__input
        spacing('gap', 8px)
        flex(column, flex-start, stretch, inline-flex)

        &__label
            Body2(500)
            color: $Primary900

        &__helper
            Caption1(400)
            color: $AlphaBlack60

        &__error-text
            Caption1(400)
            color $Destructive500


        &__base
            shadow-1()
            Body2(300)
            position relative
            color $Primary900
            background-color $BaseWhite
            border solid 1px $AlphaBlack10
            border-radius 12px

            &.medium
                height 40px

            &.large
                height 48px

            &:hover
                border-color $AlphaBlack20

            &:focus-within
                focus-ring()


            .slot
                position absolute
                top 50%
                transform translateY(-50%)
                height: 100%
                flex(column, center, center, flex)

                &.tail
                    left 0

                &.lead
                    right 0

                &.small
                    width 42px

                &.medium
                    width 100px
                    spacing('padding', 4px, 4px)

                .icon
                    height 20px
                    color $AlphaBlack60

                div, button, svg, select
                    border-radius 10px
                    width 100%
                    height 100%

            input
                spacing('padding', 0, 16px)
                form-inherit()
                width 100%
                height 100%
                border-radius 12px
                cursor text

                &.tail
                    &__small
                        padding-left 48px
                    &__medium
                        padding-left 104px

                &.lead
                    &__small
                        padding-right 48px
                    &__medium
                        padding-right 104px

                &::placeholder
                    color $AlphaBlack60

        &.error
            .blank__input__base
                border-color $Destructive200
                background-color $Destructive50

                input
                    color $Destructive500

                    &::placeholder
                        color $Destructive400

        &.disabled
            .blank__input__base
                border none
                box-shadow none
                background-color $AlphaBlack5

                input
                    color $AlphaBlack60

                    &::placeholder
                        color $AlphaBlack30

            .icon
                color $AlphaBlack30

        &.url
            .blank__input__base
                .slot
                    &.tail
                        spacing('padding', 0)
                        width 87px

                        .url-slot
                            flex(row, center, center, flex)
                            Body2(400)
                            color $AlphaBlack40
                            border-right: solid 1px $AlphaBlack10
                            border-radius 0 !important

        &.phone
            .blank__input__base
                .slot
                    &.tail
                        width 96px

                        .phone-slot
                            spacing('padding', 0, 8px)
                            flex(row, center, center, flex)
                            Body2(400)
                            color $AlphaBlack50

        &.currency
            .blank__input__base
                .slot
                    &.tail
                        span
                            spacing('padding', 0, 8px)
                            flex(row, center, center, flex)
                            Body2(400)
                            color $AlphaBlack50

                    &.lead
                        text-align: right
                        width 75px
                        select
                            spacing('padding', 0, 8px)
                            flex(row, center, center, flex)
                            Body2(400)
                            color $AlphaBlack50


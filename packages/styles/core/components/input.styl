.blank
    &__input
        spacing('gap', 8px)
        flex(column, flex-start, stretch, inline-flex)

        &__label
            Body2(500)
            color: $Primary900

        &__helper
            Caption1(400)
            color: $AlphaBlack60

        &__error-text
            Caption1(400)
            color $Destructive500


        &__base
            shadow-1()
            Body2(300)
            position relative
            color $Primary900
            background-color $BaseWhite
            border solid 1px $AlphaBlack10
            border-radius 12px

            &.medium
                height 40px

            &.large
                height 48px

            &:hover
                border-color $AlphaBlack20

            &:focus-within
                focus-ring()

            .icon
                height 20px
                width 20px
                color $AlphaBlack60
                position absolute
                top 50%
                transform translateY(-50%)

                &.tail
                    left 16px

                &.lead
                    right 16px


            input
                spacing('padding', 0, 16px)
                form-inherit()
                width 100%
                height 100%
                border-radius 12px
                cursor text

                &.tail
                    padding-left 48px

                &.lead
                    padding-right 48px

                &::placeholder
                    color $AlphaBlack60

        &.error
            .blank__input__base
                border-color $Destructive200
                background-color $Destructive50

                input
                    color $Destructive500

                    &::placeholder
                        color $Destructive400

        &.disabled
            .blank__input__base
                border none
                box-shadow none
                background-color $AlphaBlack5

                input
                    color $AlphaBlack60

                    &::placeholder
                        color $AlphaBlack30

            .icon
                color $AlphaBlack30
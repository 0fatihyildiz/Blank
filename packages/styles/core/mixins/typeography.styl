text-display(weight){
        fontSize = 96px
        lineHeight = 100px
        letterSpacing = -2%
        fontFamily = 'Inter'
        textCase = 'ORIGINAL'
        textDecoration = 'NONE'
        if weight == 'Regular'
            font-weight '400'
        else if weight == 'Medium'
            font-weight '500'
        else if weight == 'Semi Bold'
            font-weight '600'
        else if weight == 'Bold'
            font-weight '700'
        else if weight == 'Extra Bold'
            font-weight '800'

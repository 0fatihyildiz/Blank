{
    "compilerOptions": {
        "target": "ESNext",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "rootDir": "core",
        "module": "ESNext",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["core/*"]
        },
        "strict": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["core/**/*"],
    "exclude": ["node_modules", "dist"]
}

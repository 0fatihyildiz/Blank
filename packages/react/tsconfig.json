{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": "core",
    "paths": {
      "@/*": ["core/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["core/**/*"],
  "exclude": ["node_modules", "dist"]
}
